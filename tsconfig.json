{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(pages)/product-details/[productId]/page.jsx", "src/app/_feature/pages/product-details/_product/page.jsx", "src/app/(pages)/categories/[categoryDetails]/page.jsx", "src/app/_core/_contexts/wishlistContext.jsx", "src/app/_feature/components/AllProducts/AllProducts.jsx", "src/app/_feature/pages/cart/components/CartBody/CartBody.jsx", "src/app/_feature/pages/categoreis/components/CategoriesContent/CategoriesContent.jsx", "src/app/_feature/pages/home/components/FeaturedProducts/FeaturedProducts.jsx", "src/app/_feature/pages/product-details/components/RelatedProducts/RelatedProducts.jsx", "src/app/_shared/components/ProductCard/ProductCard.jsx", "src/app/page.jsx", "src/app/_feature/pages/home/components/HomePageContent/HomePageContent.jsx"],
  "exclude": ["node_modules"]
}
